extends layout

block content
    body(onload='document.newPersonForm.person.focus();')
        h1 Peope's Favourite Colours

        ul
            for person in personsArray
                li 
                    a(href='/personsColours?id=#{person._id}') #{person.name}

        form(name='newPersonForm', action='/addPerson', method='POST')
            label Person 
            input(type='text', name='person')
            input(type='submit', name='submit', value='Add')