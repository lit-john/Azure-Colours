extends layout

block content
    body(onload='document.newPersonForm.person.focus();')

        // Include pageHeader.jade
        include pageHeader

        div#main

            h1 Peope's Favourite Colours

            ul
                for person in personsArray
                    li 
                        a(href='/personsColours?id=#{person._id}') #{person.name}
                        button
                            a(href='/deletePerson?id=#{person._id}') DELETE

            form(name='newPersonForm', action='/addPerson', method='POST')
                label Person 
                input(type='text', name='person')
                button(type='submit', name='submit', value='add') ADD
                button(type='submit', name='submit', value='copy') COPY